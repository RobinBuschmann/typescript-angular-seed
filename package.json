{
  "name": "typescript-ionic-seed",
  "version": "1.1.1",
  "description": "An angular project written in typescript, modularized with system.js and jspm",
  "scripts": {
    "postinstall": "jspm install && cd src && tsd install && cd ../test/spec && tsd install",
    "bundle:ts": "jspm bundle ./src/app/bootstrap ./www/build.js --minify",
    "bundle:tpl": "node_modules/ng-template-bundler/bin/ngtb './app/**/*.html' -m ts-ion-seed -o app/templates.ts -b ./src -d ./app",
    "bundle:index": "node_modules/usemin-cli/bin/usemin src/index.html -d ./www > www/index.html --noprocess --htmlmin --bust",
    "minify:css": "node_modules/clean-css/bin/cleancss www/main.css -o www/main.css",
    "compile:scss": "node-sass --include-path src/app/styles src/app/styles/main.scss src/app/styles/main.css",
    "clean:www": "rimraf www",
    "ngconfig:dev": "ngconfig ./config.dev.json ./src/app/modules/core/config/config.ts -m ts-ion-seed.core -x -i ../core -o",
    "ngconfig:prod": "ngconfig ./config.prod.json ./src/app/modules/core/config/config.ts -m ts-ion-seed.core -x -i ../core -o",
    "copy:css": "copyup src/app/styles/main.css www -f",
    "copy:ts": "copyup 'src/**/*.ts' www/",
    "copy:images": "copyup 'src/**/*.svg' 'src/**/*.png' 'src/**/*.jpg' 'src/**/*.jpeg' 'src/**/*.gif' www",
    "copy:fonts": "copyup 'src/**/*.eot' 'src/**/*.svg' 'src/**/*.ttf' 'src/**/*.woff' 'src/**/*.woff2' www",
    "copy:json": "copyup 'src/**/*.json' www",
    "copy:config": "copyup src/config.js www -f",
    "copy:src": "cp -a ./src/ ./www/",
    "copy:systemJsProd": "copyup src/jspm_packages/system-csp-production.js www -f",
    "copy:systemJsPolyFill": "copyup src/jspm_packages/system-polyfills.js www -f",
    "copy": "npm run copy:css & npm run copy:config & npm run copy:systemJsProd & npm run copy:systemJsPolyFill & npm run copy:images & npm run copy:fonts",
    "build": "npm run bundle:tpl && npm run compile:scss",
    "build:dev": "npm run clean:www && npm run ngconfig:dev && npm run build && npm run copy:src",
    "build:prod": "npm run ngconfig:prod && npm run clean:www && npm run build && npm run bundle:ts && npm run copy && npm run minify:css && npm run bundle:index",
    "build:test": "tsc --project src --outDir .test --rootDir src",
    "build:css": "npm run compile:scss && npm run copy:css",
    "watch:css": "onchange 'src/**/*.scss' -- npm run build:css",
    "watch:ts": "onchange 'src/**/*.ts' -- npm run copy:ts",
    "watch:html": "onchange 'src/**/*.html' -- npm run bundle:tpl",
    "watch:config": "onchange 'src/config.js' -- npm run copy:config",
    "watch:json": "onchange 'src/**/*.json' -- npm run copy:json",
    "server": "ionic serve",
    "android": "npm run build:dev && ionic run android",
    "android:prod": "npm run build:prod && ionic run android",
    "android:build": "npm run build:dev && ionic build android",
    "android:build:prod": "npm run build:prod && ionic build android --release",
    "ios": "npm run build:dev && ionic run ios",
    "ios:prod": "npm run build:prod && ionic run ios",
    "ios:build": "npm run build:dev && ionic build ios",
    "ios:build:prod": "npm run build:prod && ionic build ios",
    "serve": "npm run build:dev && npm-run-all -p watch:ts watch:html watch:css watch:json watch:config server",
    "serve:prod": "npm run build:prod && ionic serve",
    "test:copy:src": "cp -a ./src/ ./test/.src/",
    "test:install:typings": "cd ./test/spec/ && ../../node_modules/tsd/build/cli.js install",
    "test:compile:src:ts": "tsc --project test/.src",
    "test:compile:spec:ts": "tsc --project test/spec",
    "test:clean:src": "rimraf test/.src",
    "test:build:src": "npm run test:copy:src && npm run test:compile:src:ts",
    "test:build:spec": "npm run test:install:typings && npm run test:compile:spec:ts",
    "coverage": "./node_modules/remap-istanbul/bin/remap-istanbul -i ./test/coverage/coverage-final.json -o ./test/coverage -t html",
    "pretest": "npm run test:build:src && npm run test:build:spec",
    "test": "cd test && ../node_modules/karma/bin/karma start --single-run",
    "posttest": "npm run coverage && npm run test:clean:src"
  },
  "dependencies": {},
  "devDependencies": {
    "angular": "^1.5.2",
    "angular-mocks": "^1.5.2",
    "browser-sync": "^2.11.1",
    "chai": "^3.5.0",
    "clean-css": "^3.4.9",
    "copyfiles": "^0.2.1",
    "jspm": "^0.16.29",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.5",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon-chai": "^1.2.0",
    "karma-systemjs": "^0.12.0",
    "lolex": "^1.4.0",
    "mocha": "^2.4.5",
    "ng-template-bundler": "git+https://github.com/RobinBuschmann/ng-template-bundler.git",
    "ngconfig-cli": "git+https://github.com/RobinBuschmann/ngconfig-cli.git",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.6.0",
    "onchange": "^2.1.2",
    "phantomjs-prebuilt": "^2.1.6",
    "remap-istanbul": "^0.5.1",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "tsd": "^0.6.5",
    "typescript": "^1.7.5",
    "typings": "^0.7.9",
    "usemin-cli": "git+https://github.com/RobinBuschmann/usemin-cli.git"
  },
  "jspm": {
    "directories": {
      "baseURL": "src"
    },
    "dependencies": {
      "angular": "github:angular/bower-angular@^1.5.0",
      "angular-mocks": "github:angular/bower-angular-mocks@^1.5.2",
      "angular-ui-router": "github:angular-ui/ui-router@^0.2.18",
      "at": "github:RobinBuschmann/angular-typescript@^0.0.20",
      "bootstrap-sass": "github:twbs/bootstrap-sass@^3.3.6",
      "ionic": "github:driftyco/ionic-bower@^1.2.4",
      "reflect-metadata": "npm:reflect-metadata@^0.1.3",
      "ts": "github:frankwallis/plugin-typescript@^4.0.5",
      "typescript": "npm:typescript@^1.8.9"
    },
    "devDependencies": {
      "clean-css": "npm:clean-css@^3.4.12",
      "ts-runtime": "npm:babel-runtime@^5.8.24"
    }
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard"
  ],
  "cordovaPlatforms": [
    "ios",
    "android"
  ]
}
